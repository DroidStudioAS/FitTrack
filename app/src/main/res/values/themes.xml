<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/third</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/third</item>
        <!-- Status bar color. -->
        <item name="statusBarBackground">@color/third</item>
        <item name="statusBarForeground">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/third</item>
        <item name="android:textColor">@color/third</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonTint">@color/secondary</item>

    </style>
</resources>